<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardElevation="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="4dp"
        android:paddingVertical="8dp">

        <ImageView
            android:id="@+id/iv_feat_company_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_company_title" />

        <TextView
            android:id="@+id/tv_company_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="This is the Company Name" />

        <TextView
            android:id="@+id/tv_street_address_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:lines="1"
            app:layout_constraintStart_toEndOf="@+id/iv_feat_company_image"
            app:layout_constraintTop_toBottomOf="@+id/tv_company_title"
            tools:text="250 Prospect Street" />

        <TextView
            android:id="@+id/tv_street_address_line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:lines="1"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/iv_feat_company_image"
            app:layout_constraintTop_toBottomOf="@+id/tv_street_address_line"
            tools:text="Apt 201" />

        <TextView
            android:id="@+id/tv_city_zip_state_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:lines="1"
            app:layout_constraintStart_toEndOf="@+id/iv_feat_company_image"
            app:layout_constraintTop_toBottomOf="@+id/tv_street_address_line2"
            tools:text="Cleveland, OH 09789" />


        <ImageView
            android:id="@+id/iv_features_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:src="@drawable/star_rate"
            app:layout_constraintStart_toEndOf="@id/iv_feat_company_image"
            app:layout_constraintTop_toBottomOf="@id/tv_city_zip_state_line" />

        <TextView
            android:id="@+id/tv_rating_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toEndOf="@id/iv_features_review"
            app:layout_constraintTop_toBottomOf="@+id/tv_city_zip_state_line" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>